@page
@model RazorEmployeeManagement.Pages.Employees.IndexModel
@{
}
<h2>Employee List</h2>
<form method="get" class="form-inline mb-3">
     <input type="text" asp-for="SearchTerm" value="@Model.SearchTerm" class="form-control mr-2" placeholder="Search by name or position..." />
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-page="Index" class="btn btn-secondary ml-2">Clear</a>
</form>
<a asp-page="Create" class="btn btn-primary">Add Employee</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.EmployeeList)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Salary</td>
                <td>@employee.Department</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@employee.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@page
@model RazorEmployeeManagement.Pages.Employees.CreateModel
@{
}
<h2>Create Employee</h2>
<form method="post">
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Employee.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Position</label>
        <input asp-for="Employee.Position" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Salary</label>
        <input asp-for="Employee.Salary" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Department</label>
        <input asp-for="Employee.Department" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
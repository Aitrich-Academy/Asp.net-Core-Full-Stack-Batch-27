@page "/create"
@inject EmployeeService EmployeeService
@inject NavigationManager Navigation
@using EmployeeManagement.Models
@using EmployeeManagement.Service
@using Microsoft.AspNetCore.Components.Forms

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Add Employee</h3>
        </div>
        <div class="card-body">
            <!--Understanding EditForm and OnValidSubmit
            <EditForm> is a Blazor component that binds a   
            model (Model="newEmployee") and enables form validation.
            OnValidSubmit="SaveEmployee" triggers SaveEmployee() only
            if all validations pass.
            <DataAnnotationsValidator /> enables validation based on 
            data annotation attributes in your model (Employee class).
            <ValidationSummary /> shows all validation errors in a summary list.
            <ValidationMessage For="..."/> displays specific field errors.-->
            <EditForm Model="newEmployee" OnValidSubmit="SaveEmployee">
                <DataAnnotationsValidator />
                <ValidationSummary class="alert alert-danger" />

                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <InputText class="form-control" @bind-Value="newEmployee.Name" />
                    <ValidationMessage For="@(() => newEmployee.Name)" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Position:</label>
                    <InputText class="form-control" @bind-Value="newEmployee.Position" />
                    <ValidationMessage For="@(() => newEmployee.Position)" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Age:</label>
                    <InputNumber class="form-control" @bind-Value="newEmployee.Age" />
                    <ValidationMessage For="@(() => newEmployee.Age)" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Salary:</label>
                    <InputNumber class="form-control" @bind-Value="newEmployee.Salary" />
                    <ValidationMessage For="@(() => newEmployee.Salary)" class="text-danger" />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private Employee newEmployee = new();

    private async Task SaveEmployee()
    {
        await EmployeeService.AddEmployeeAsync(newEmployee);
        Navigation.NavigateTo("/list"); // Redirect to Employee List after saving
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/list"); // Redirect to Employee List on cancel
    }
}

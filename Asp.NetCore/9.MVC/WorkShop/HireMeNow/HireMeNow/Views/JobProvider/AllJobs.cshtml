@model IEnumerable<HireMeNow.Models.Job>

<h1>JobList</h1>


<div class="container">
    <div class="row">
        
        @foreach (var job in Model)
        {
          <div class="col-md-4 col-sm-6 mb-3">
            <div class="card shadow-sm p-3 m-3">
                <div class="card-header">
                <b> @job.Company.Name </b><br>
                <b> @job.Title </b><br>
                </div>
               <p> Salary : <b> @job.Salary </b></p>
               <p> Experience : <b> @job.Experience </b></P>
               <p> <b> @job.Description </b><br></p>
               <p> Location : <b> @job.Location </b></p>
               <p>Job Type : <b> @job.JobType </b></p>


                <input type="button" value="View" class="btn btn-primary">

            </div>
            </div>
        }
    </div>

</div>


